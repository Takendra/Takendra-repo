    <item android:id="@android:id/secondaryProgress">
        <shape
            android:innerRadiusRatio="2.5"
            android:shape="ring"
            android:thickness="2dp"
            android:useLevel="true">


            <gradient
                android:centerColor="#9B9B9B"
                android:endColor="#9B9B9B"
                android:startColor="#9B9B9B"
                android:type="sweep" />
        </shape>
    </item>

