<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_white_round_corners"
    android:orientation="vertical"
    android:padding="0sp">

    <RadioGroup
        android:id="@+id/sortRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/browseSortNewestButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:button="@drawable/sort_selector"
            android:checked="true"
            android:paddingHorizontal="10dp"
            android:text="@string/browse_sort_newest"
            android:textColor="@drawable/browse_sort_check" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/color_grey" />

        <RadioButton
            android:id="@+id/browseSortPopularButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:button="@drawable/sort_selector"
            android:paddingHorizontal="10dp"
            android:text="@string/browse_sort_popular"
            android:textColor="@drawable/browse_sort_check" />
    </RadioGroup>

</LinearLayout>