<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/app_cms_force_upgrade_element_margin"
            android:src="@drawable/logo_icon" />

        <TextView
            android:id="@+id/app_cms_upgrade_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/app_cms_force_upgrade_element_margin"
            android:textAlignment="center"
            android:textSize="@dimen/upgrade_textsize"
            android:textStyle="bold" />

        <Button
            android:id="@+id/app_cms_upgrade_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/app_cms_force_upgrade_element_margin"
            android:padding="@dimen/app_cms_force_upgrade_button_padding"
            android:text="@string/app_cms_upgrade_button_text"
            android:background="@color/splashbackgroundColor"
            android:textAlignment="center"
            android:textSize="@dimen/upgrade_textsize"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>