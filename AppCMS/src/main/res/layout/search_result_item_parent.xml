<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/parentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/search_item_title_padding_default"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/search_item_title_padding_default"
        android:layout_marginEnd="@dimen/search_item_padding_default"
        android:layout_marginTop="4dp"
        android:background="#808080"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/parentRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/search_item_padding_default"
        android:paddingEnd="@dimen/search_item_padding_default">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
