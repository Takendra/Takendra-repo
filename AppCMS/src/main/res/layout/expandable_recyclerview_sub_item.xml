<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/expandable_grid_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        >

        <TextView
            android:id="@+id/sub_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/instagram"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="7dp"
            android:background="@android:color/white"
            android:padding="11dp"
            android:scaleType="fitCenter"
            android:src="@drawable/brand_instagram"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"/>

        <ImageView
            android:id="@+id/twitter"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="7dp"
            android:background="@android:color/white"
            android:padding="11dp"
            android:scaleType="fitCenter"
            android:src="@drawable/brand_twitter"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"/>

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="7dp"
            android:background="@android:color/white"
            android:padding="11dp"
            android:scaleType="fitCenter"
            android:src="@drawable/brand_facebook"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/sub_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
         />

</LinearLayout>