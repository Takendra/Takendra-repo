<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewSearchFilter"
        android:layout_width="133.5dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/imageViewSearchFilterBadge"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/imageViewSearchFilter"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="@id/imageViewSearchFilter"
        app:layout_constraintStart_toStartOf="@id/imageViewSearchFilter"
        app:layout_constraintTop_toTopOf="@id/imageViewSearchFilter" />
    <!--</android.support.v7.widget.CardView>-->

    <TextView
        android:id="@+id/textViewClassDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:text=""
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/imageViewSearchFilter"
        app:layout_constraintStart_toEndOf="@id/imageViewSearchFilter"
        android:layout_margin="5dp"/>

    <ImageView
        android:id="@+id/addToFavorites"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/textViewClassDuration"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        />

    <ImageView
        android:id="@+id/vodPlayButton"
        android:layout_width="33dp"
        android:layout_height="33dp"
        app:layout_constraintStart_toStartOf="@id/imageViewSearchFilter"
        app:layout_constraintTop_toTopOf="@id/imageViewSearchFilter"
        app:layout_constraintEnd_toEndOf="@id/imageViewSearchFilter"
        app:layout_constraintBottom_toBottomOf="@id/imageViewSearchFilter"
        />

    <TextView
        android:id="@+id/tagBrandTitleBrowse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:text=""
        android:textSize="15sp"
        android:layout_margin="5dp"
        app:layout_constraintStart_toEndOf="@id/imageViewSearchFilter"
        app:layout_constraintTop_toTopOf="@id/imageViewSearchFilter"
        app:layout_constraintBottom_toBottomOf="@id/imageViewSearchFilter"/>

    <TextView
        android:id="@+id/tagClassTitleBrowse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:text=""
        android:textSize="15sp"
        android:layout_margin="5dp"
        app:layout_constraintStart_toEndOf="@id/imageViewSearchFilter"
        app:layout_constraintBottom_toBottomOf="@id/imageViewSearchFilter"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.40"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

