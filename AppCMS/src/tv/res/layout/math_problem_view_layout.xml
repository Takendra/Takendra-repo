<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_cms_math_problem_view_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/app_cms_math_problem_info_container"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/app_cms_math_problem_message_view"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="This show is for big kids. Grab a grownup to help you watch!"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:visibility="visible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="162dp"
            android:src="@drawable/parental_gateview_display_img" />
    </LinearLayout>

    <TextView
        android:id="@+id/app_cms_math_problem_subtext_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_cms_math_problem_info_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="To continue, answer the math problem below:"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/app_cms_math_problem_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_cms_math_problem_subtext_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="9 + 96"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/app_cms_math_problem_answer_field_view"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@id/app_cms_math_problem_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/appcms_edittext_background"
        android:inputType="number"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/app_cms_math_wrong_answer_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_cms_math_problem_answer_field_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Sorry that's not the right answer. Find an adult to get help!"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/app_cms_math_submit_answer_button"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_below="@id/app_cms_math_wrong_answer_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="WATCH NOW"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:visibility="visible" />
</RelativeLayout>