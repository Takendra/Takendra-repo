<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_cms_parental_gate_view_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11a1ab">

    <LinearLayout
        android:id="@+id/app_cms_parental_gate_info_container"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/app_cms_parental_gate_message_view"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="Grab a grown up to sign in and watch your favorite shows. It's easy and free!"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="visible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="162dp"
            android:src="@drawable/parental_gateview_display_img" />
    </LinearLayout>

    <TextView
        android:id="@+id/app_cms_parental_gate_subtext_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_cms_parental_gate_info_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="To continue, press and hold the butterfly."
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/app_cms_parental_gate_subtext_view"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/app_cms_parental_gate_image_1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/parental_gate_view_image_bg_selector"
            android:focusable="true"
            android:longClickable="true"
            android:padding="5dp"
            android:src="@drawable/parental_gateview_butterfly_image" />

        <ImageView
            android:id="@+id/app_cms_parental_gate_image_2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/parental_gate_view_image_bg_selector"
            android:focusable="true"
            android:longClickable="true"
            android:padding="5dp"
            android:src="@drawable/parental_gateview_ladybug_image" />

        <ImageView
            android:id="@+id/app_cms_parental_gate_image_3"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/parental_gate_view_image_bg_selector"
            android:focusable="true"
            android:longClickable="true"
            android:padding="5dp"
            android:src="@drawable/parental_gateview_owl_image" />

    </LinearLayout>
</RelativeLayout>